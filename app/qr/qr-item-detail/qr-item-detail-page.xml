            <Label text="{{ name_scientific }}" textWrap="true"></Label>
            <Label text="ชื่อพรรณไม้" class="font-H"></Label>
            <Label text="{{ veg_name }}" textWrap="true"></Label>
            <Label text="อาณาจักร" class="font-H"></Label>
            <Label text="{{ kingdom }}" textWrap="true"></Label>
            <Label text="หมวด" class="font-H"></Label>
            <Label text="{{ division }}" textWrap="true"></Label>
            <Label text="อาณาจักร" class="font-H"></Label>
            <Label text="{{ kingdom }}" textWrap="true"></Label>
            <Label text="ชั้น" class="font-H"></Label>
