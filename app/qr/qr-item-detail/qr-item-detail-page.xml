<Page
    navigatingTo="onNavigatingTo"  
    xmlns="http://schemas.nativescript.org/tns.xsd">

    <ActionBar class="action-bar">
        <NavigationButton tap="onBackButtonTap" android.systemIcon="ic_menu_back"/>
        
        <Label class="action-bar-title" text="{{ plant_name }}"></Label>
    </ActionBar>
    <ScrollView width="100%" height="100%">
        <StackLayout class="font-detail">
        
            <Image visibility="{{beginning !='' ? 'visible':'collapse'}}" class="plant-img" src="{{ sverPath+beginning }}" stretch="aspectFill" />
            
            <Label visibility="{{leaves ? 'visible':'collapse'}}" text="รูปใบ" class="font-H"></Label>
            <Image visibility="{{leaves ? 'visible':'collapse'}}" class="plant-img" src="{{ sverPath+leaves }}" stretch="aspectFill" />
            
            <Label visibility="{{flower ? 'visible':'collapse'}}" text="รูปดอก" class="font-H"></Label>
            <Image visibility="{{flower ? 'visible':'collapse'}}" class="plant-img" src="{{ sverPath+flower }}" stretch="aspectFill" />
            
            <Label visibility="{{fruit ? 'visible':'collapse'}}" text="{{ fruit }}" class="font-H"></Label>
            <Image visibility="{{fruit ? 'visible':'collapse'}}" class="plant-img" src="{{ sverPath+fruit }}" stretch="aspectFill" />
            
            <Label visibility="{{trunk !='' ? 'visible':'collapse'}}" text="รูปลำต้น" class="font-H"></Label>
            <Image visibility="{{trunk !='' ? 'visible':'collapse'}}" class="plant-img" src="{{ sverPath+trunk }}" stretch="aspectFill" />
            
            <Label text="ชื่อ" class="font-H"></Label>
            <Label text="{{ plant_name }}" textWrap="true"></Label>
            <Label text="ชื่อภาษาอังกฤษ" class="font-H"></Label>
            <Label text="{{ plant_nameeng }}" textWrap="true"></Label>
